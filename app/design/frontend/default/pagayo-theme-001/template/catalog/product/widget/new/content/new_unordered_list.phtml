<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>
	<ul>
	<?php $i=0; foreach ($_products->getItems() as $_product): ?>
		<li class="item<?php echo (++$i == count($_products))?' last':''; ?>">
			<?
				$product_title =$this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name');
				if (strlen($product_title) > 30)
					$product_title = substr($product_title, 0, 30)."...";
			?>
		   <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $product_title ?></a></li>
		</li>
	<?php endforeach; ?>
	</ul>
<?php endif; ?>
